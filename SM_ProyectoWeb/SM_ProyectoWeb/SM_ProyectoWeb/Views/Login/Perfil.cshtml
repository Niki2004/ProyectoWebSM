            </ul>
        </div>
    </div>
</div>

<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="main-header">Perfil de Usuario</h2>

                    <!-- Perfil del usuario mejorado -->
                    @if (Model != null)
                    {
                        <div class="user-profile-container">
                            <div class="user-profile-header">
                                <div class="user-avatar">
                                    @(Model.Nombre != null ? Model.Nombre.Substring(0, 1).ToUpper() : "U")
                                </div>
                                <div class="user-title">
                                    <h2>@Model.Nombre</h2>
                                    <p>@ViewBag.Rol</p>
                                </div>
                            </div>

                            <div class="user-info-section">
                                <h3>Información Personal</h3>
                                <div class="info-item">
                                    <div class="info-label">Nombre:</div>
                                    <div class="info-value">@Model.Nombre</div>
                                </div>
                                <div class="info-item">
                                    <div class="info-label">Email:</div>
                                    <div class="info-value">@Model.Email</div>
                                </div>
                                <div class="info-item">
                                    <div class="info-label">Rol:</div>
                                    <div class="info-value">@ViewBag.Rol</div>
                                </div>
                                <!-- Puedes agregar más campos si tienes disponibles en tu modelo -->
                            </div>

                            <div class="profile-buttons">
                                <a href="@Url.Action("Principal", "Login")" class="back-btn">
                                    <i class="fa fa-arrow-left"></i> Regresar
                                </a>
                                <a href="@Url.Action("CambiarContrasennia", "Login")" class="edit-profile-btn">
                                    <i class="fa fa-edit"></i> Nueva contraseña
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <i class="fa fa-exclamation-circle"></i> No se pudo cargar la información del usuario.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/assets/js/lib/jquery.min.js"></script>
<script src="~/assets/js/lib/jquery.nanoscroller.min.js"></script>
<script src="~/assets/js/lib/menubar/sidebar.js"></script>
<script src="~/assets/js/lib/bootstrap.min.js"></script>
<script src="~/assets/js/scripts.js"></script>

<!-- Script para asegurar que el sidebar funcione correctamente en dispositivos móviles -->
<script>
    $(document).ready(function() {
        // Toggle para sidebar en móviles
        $('.hamburger.sidebar-toggle').on('click', function() {
            $('body').toggleClass('sidebar-open');
        });

        // Cerrar sidebar al hacer clic fuera en dispositivos móviles
        $(document).on('click', function(e) {
            if ($(window).width() <= 767) {
                if (!$(e.target).closest('.sidebar, .hamburger.sidebar-toggle').length) {
                    $('body').removeClass('sidebar-open');
                }
            }
        });

        // Ajuste al cambiar tamaño de ventana
        $(window).resize(function() {
            if ($(window).width() > 767) {
                $('body').removeClass('sidebar-open');
            }
        });
    });
</script>