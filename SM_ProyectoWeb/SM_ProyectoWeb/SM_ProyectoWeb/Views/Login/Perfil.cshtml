<!-- Script para asegurar que el sidebar funcione correctamente en dispositivos móviles -->
<script>
    $(document).ready(function() {
        // Toggle para sidebar en móviles
        $('.hamburger.sidebar-toggle').on('click', function() {
            $('body').toggleClass('sidebar-open');
        });

        // Cerrar sidebar al hacer clic fuera en dispositivos móviles
        $(document).on('click', function(e) {
            if ($(window).width() <= 767) {
                if (!$(e.target).closest('.sidebar, .hamburger.sidebar-toggle').length) {
                    $('body').removeClass('sidebar-open');
                }
            }
        });

        // Ajuste al cambiar tamaño de ventana
        $(window).resize(function() {
            if ($(window).width() > 767) {
                $('body').removeClass('sidebar-open');
            }
        });
    });
</script>