@using SM_ProyectoWeb.Models
@model UsuarioModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<!-- Estilos responsivos -->
<style>
    /* Estilos generales responsivos */
    .recipe-content {
        width: 100%;
        padding: 15px;
    }

    .recipe-image-container {
        max-width: 100% !important;
        margin: 20px auto !important;
    }

    .recipe-info {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        margin-bottom: 20px;
    }

        .recipe-info span {
            display: inline-block;
            margin-right: 10px;
        }

    .related-recipes .row {
        display: flex;
        flex-wrap: wrap;
    }

    .related-recipes .col-md-4 {
        flex: 0 0 100%;
        padding: 10px 0;
    }

    /* Estilos para el perfil de usuario */
    .user-profile-container {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.15);
        padding: 40px;
        margin: 40px auto;
        max-width: 900px;
        width: 85%;
    }

    .user-profile-header {
        border-bottom: 2px solid #f0f0f0;
        margin-bottom: 30px;
        padding-bottom: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .user-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background-color: #263238; /* Color similar a la barra lateral */
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 48px;
        margin-right: 25px;
        box-shadow: 0 3px 8px rgba(0,0,0,0.2);
    }

    .user-title h2 {
        margin: 0;
        color: #263238;
        font-size: 32px;
    }

    .user-title p {
        margin: 8px 0 0;
        color: #78909c;
        font-size: 18px;
    }

    .user-info-section {
        margin-bottom: 35px;
    }

        .user-info-section h3 {
            color: #263238;
            font-size: 22px;
            margin-bottom: 20px;
            border-left: 5px solid #263238; /* Cambiado a color similar a la barra lateral */
            padding-left: 15px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

    .info-item {
        padding: 16px 0;
        border-bottom: 1px dashed #eceff1;
        display: flex;
        font-size: 18px;
    }

        .info-item:last-child {
            border-bottom: none;
        }

    .info-label {
        font-weight: bold;
        width: 150px;
        color: #455a64;
    }

    .info-value {
        flex: 1;
        color: #37474f;
    }

    .profile-buttons {
        text-align: center;
        margin-top: 30px;
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .edit-profile-btn {
        background-color: #263238; /* Cambiado a color similar a la barra lateral */
        color: white;
        border: none;
        padding: 12px 25px;
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s;
        font-size: 16px;
        letter-spacing: 0.5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.15);
        text-decoration: none;
        display: inline-block;
    }

        .edit-profile-btn:hover {
            background-color: #37474f; /* Versión más clara para hover */
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            text-decoration: none;
            color: white;
        }

    .back-btn {
        background-color: #455a64;
        color: white;
        border: none;
        padding: 12px 25px;
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s;
        font-size: 16px;
        letter-spacing: 0.5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.15);
        text-decoration: none;
        display: inline-block;
    }

        .back-btn:hover {
            background-color: #546e7a;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            text-decoration: none;
            color: white;
        }

    .main-header {
        text-align: center;
        margin-top: 30px;
        color: #263238;
        font-size: 36px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    media (max-width: 768px) {
        .user-profile-header

    {
        flex-direction: column;
        text-align: center;
    }

    .user-avatar {
        margin-right: 0;
        margin-bottom: 20px;
    }

    .info-item {
        flex-direction: column;
    }

    .info-label {
        width: 100%;
        margin-bottom: 8px;
    }

    .user-profile-container {
        width: 95%;
        padding: 20px;
    }

    .profile-buttons {
        flex-direction: column;
        gap: 10px;
    }

    .back-btn, .edit-profile-btn {
        width: 100%;
    }

   
    }
</style>

